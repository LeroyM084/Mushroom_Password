{
  "manifest_version": 3,
  "name": "MushroomPassword",
  "version": "0.1",
  "description": "A simple password manager and generator.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "ChromeExtension/background.js"
  },
  "action": {
    "default_popup": "ChromeExtension/index.html",
    "default_icon": {
      "16": "ChromeExtension/assets/icons/icon16.webp",
      "32": "ChromeExtension/assets/icons/icon32.webp",
      "128": "ChromeExtension/assets/icons/icon128.webp"
    }
  },
  "icons": {
    "16": "ChromeExtension/assets/icons/icon16.webp",
    "32": "ChromeExtension/assets/icons/icon32.webp",
    "128": "ChromeExtension/assets/icons/icon128.webp"
  }
}
